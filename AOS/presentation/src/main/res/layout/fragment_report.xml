<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ReportVM"
            type="com.d205.sdutyplus.view.report.ReportViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".ui.main.timer.ReportFragment">

        <!--타이틀 바-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_appbar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/iv_appbar_title"
                android:layout_width="97dp"
                android:layout_height="29dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/img_logo_report"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/iv_add_task"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_add"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/divider"
                style="@style/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_selected_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/layout_appbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_totalTime"
            android:visibility="gone"
            tools:text="2022년 7월 25일"/>

        <TextView
            android:id="@+id/exOneMonthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/layout_appbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/exOneYearText"
            tools:text="April" />

        <TextView
            android:id="@+id/exOneYearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/exOneMonthText"
            app:layout_constraintStart_toStartOf="@id/exOneMonthText"
            app:layout_constraintBottom_toTopOf="@id/WeekCalendar"
            tools:text="2022" />

        <ImageView
            android:id="@+id/iv_calendar_call"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_calendar_btn"
            android:src="@drawable/ic_calendar"
            android:layout_marginEnd="20dp"
            android:elevation="40dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/layout_appbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/WeekCalendar"
            />

        <com.kizitonwose.calendar.view.WeekCalendarView
            android:id="@+id/WeekCalendar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/exOneYearText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_totalTime"
            app:cv_dayViewResource="@layout/example_1_calendar_day" />

        <TextView
            android:id="@+id/tv_totalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/sduty_mix_violet"
            app:layout_constraintTop_toBottomOf="@id/WeekCalendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pb_total_time"
            android:text="@{ReportVM.totalTime}"
            tools:text="00:00:00"
            />

        <ProgressBar
            android:id="@+id/pb_total_time"
            android:max="100"
            android:progress="30"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_radius"
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_totalTime"
            app:layout_constraintStart_toEndOf="@id/tv_totalTime"
            app:layout_constraintBottom_toBottomOf="@id/tv_totalTime"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_task"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_totalTime"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_report"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    submitList="@{ReportVM.remoteTask}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/list_item_task"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="100dp"
            app:lottie_rawRes="@raw/report_animation_2"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:layout_constraintTop_toBottomOf="@id/tv_totalTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공부한 기록을 추가해 주세요."
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/lottie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>