<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="joinViewModel"
            type="com.d205.sdutyplus.view.join.JoinViewModel" />

        <import type="com.d205.sdutyplus.R"/>
        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.join.JoinIdFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginHorizontal="8dp"
                android:background="@null"
                android:singleLine="true" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_title_id_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginEnd="4dp"
            android:text="이메일 형식이 잘못되었습니다."
            android:visibility="@{joinViewModel.isCorrectId? View.GONE : View.VISIBLE}"
            android:textColor="@color/red_300"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/cv_email"
            app:layout_constraintEnd_toEndOf="@id/cv_email"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/common_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="다음"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:background="@color/app_purple_light"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>