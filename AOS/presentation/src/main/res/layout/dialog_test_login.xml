<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_shape"
        tools:context=".ui.main.feed.dialog.FeedDeleteDialog">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_test_login_warning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:layout_marginVertical="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_agree">

            <TextView
                android:id="@+id/tv_test_login_warning1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 테스트 계정으로만"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_test_login_warning2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 이용이 가능합니다."
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_test_login_warning1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_test_login_warning3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="테스트 계정은 자동으로 생성되며,"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_test_login_warning2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_test_login_warning4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정 및 데이터는 관리자에 의해"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_test_login_warning3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_test_login_warning5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제되거나 활용될 수 있으며"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_test_login_warning4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_test_login_warning6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="데이터가 보호받지 못할 수 있습니다."
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_test_login_warning5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/btn_agree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_shape_left"
            android:textColor="@color/sduty_mix_violet"
            android:text="동의"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_cancel"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_shape_right"
            android:textColor="@color/sduty_action_red"
            android:text="취소"
            app:layout_constraintTop_toTopOf="@id/btn_agree"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_agree"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>