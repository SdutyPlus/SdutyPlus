<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_white_border"
        tools:context=".ui.main.mypage.dialog.DialogAchivement">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%만 달성"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="50dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_achieve"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/tv_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="12dp"
            android:src="@drawable/ic_trophy"
            />

        <TextView
            android:id="@+id/tv_achieve_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업적 이름"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/iv_achieve"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="10dp"
            />

        <TextView
            android:id="@+id/tv_achieve_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업적에 대한 설명을 위한 공간입니다."
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_achieve_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="5dp"
            />

        <Button
            android:id="@+id/btn_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대표 뱃지 설정"
            app:layout_constraintTop_toBottomOf="@id/tv_achieve_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="40dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>