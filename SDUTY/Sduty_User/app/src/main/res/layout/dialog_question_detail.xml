<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.d108.sduty.model.dto.Qna" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_shape"
        tools:context=".ui.main.mypage.setting.QuestionDetailDialog">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="제목"
            android:textSize="18sp"
            android:layout_margin="24dp"
            app:layout_constraintBottom_toTopOf="@id/tv_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="내용"
            android:text="@{data.title}"
            android:textSize="16sp"
            android:textColor="#979797"
            android:layout_marginLeft="24dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_title_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답변 내용"
            android:textSize="18sp"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="답변 내용"
            android:text="@{ data.ansWriter == `` ? `아직 답변이 없습니다` : data.ansWriter + `:  `+data.answer}"
            app:layout_constraintTop_toBottomOf="@id/tv_title_answer"
            app:layout_constraintBottom_toTopOf="@id/btn_cancel"
            android:layout_marginStart="24dp"
            android:layout_marginVertical="16dp"/>



        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_left"
            android:backgroundTint="@color/app_purple_light"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:text="확인"
            app:layout_constraintTop_toBottomOf="@id/tv_answer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>