<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <corners android:radius="30dp"/>
            <gradient
                android:angle="360"
                android:startColor="@color/app_blue"
                android:endColor="@color/app_purple"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval" >
            <solid android:color="#fff" />
            <corners android:radius="30dp"/>
        </shape>
    </item>

</layer-list>